# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=marka
DB_LOGGING=false
DB_SSL=false

# JWT
JWT_SECRET=your-secret-key
JWT_REFRESH_SECRET=your-refresh-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Paystack
PAYSTACK_SECRET_KEY=xxxxxx
PAYSTACK_PUBLIC_KEYsk_test_xxxxxxxxxxxxxxxxxxxxxxxx=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_CURRENCY=UGX

# Storage Configuration
STORAGE_PROVIDER=cloudinary

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=marka

# Optional: Folder structure
CLOUDINARY_STUDENT_PHOTOS_FOLDER=marka/student-photos
CLOUDINARY_REPORTS_FOLDER=marka/reports
CLOUDINARY_TEMPLATES_FOLDER=marka/templates

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
EMAIL_FROM_NAME=Your App Name
EMAIL_FROM_EMAIL=noreply@yourapp.com
EMAIL_REPLY_TO=support@yourapp.com

# Tracking
EMAIL_TRACKING_ENABLED=true
EMAIL_TRACKING_DOMAIN=yourapp.com

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Throttler
THROTTLER_TTL=60
THROTTLER_LIMIT=100

# Security
VERIFICATION_JWT_SECRET=your_verification_jwt_secret_here
VERIFICATION_JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
EMAIL_SECRET=your-secret-key-for-tokens

# Frontend
FRONTEND_URL=https://app.marka.ug

# Rate Limiting
EMAIL_RATE_LIMIT_MAX_EMAILS=100
EMAIL_RATE_LIMIT_TIME_WINDOW=3600000