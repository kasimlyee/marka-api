# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=marka
DB_LOGGING=false
DB_SSL=false

# JWT
JWT_SECRET=your-secret-key
JWT_REFRESH_SECRET=your-refresh-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Paystack
PAYSTACK_SECRET_KEY=xxxxxx
PAYSTACK_PUBLIC_KEYsk_test_xxxxxxxxxxxxxxxxxxxxxxxx=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_CURRENCY=UGX

# Storage Configuration
STORAGE_PROVIDER=cloudinary

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=marka

# Optional: Folder structure
CLOUDINARY_STUDENT_PHOTOS_FOLDER=marka/student-photos
CLOUDINARY_REPORTS_FOLDER=marka/reports
CLOUDINARY_TEMPLATES_FOLDER=marka/templates

# Email Settings
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=no-reply@marka.ug
SMTP_PASSWORD=your_secure_app_password
EMAIL_FROM='"Marka Notifications" <no-reply@marka.ug>'
EMAIL_TEMPLATES_PATH=dist/templates/email

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Throttler
THROTTLER_TTL=60
THROTTLER_LIMIT=100

# Security
VERIFICATION_JWT_SECRET=your_verification_jwt_secret_here
VERIFICATION_JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Frontend
FRONTEND_URL=https://app.marka.ug